<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:padding="10dp"
    android:foreground="?selectableItemBackgroundBorderless">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/vCryptocurrencyLogo"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="10dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:scaleType="fitCenter"
        app:tint="@color/colorPrimaryDark"
        tools:srcCompat="@drawable/logo_btc"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/vCryptocurrencyName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/vCryptocurrencyLogo"
        android:layout_alignParentTop="true"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@android:color/black"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:fontFamily="sans-serif-condensed"
        tools:text="BTC"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/vCryptocurrencyFullName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/vCryptocurrencyLogo"
        android:layout_alignParentBottom="true"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/grey_extra_dark"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        tools:text="Bitcoin"/>

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/vAutoRefresh"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5.5dp"
        android:layout_toEndOf="@id/vCryptocurrencyName"
        android:visibility="visible"
        app:srcCompat="@drawable/ic_refresh"
        app:tint="@color/grey_dark"/>

</RelativeLayout>